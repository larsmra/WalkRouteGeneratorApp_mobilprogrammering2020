<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreateScheduleActivity">

    <EditText
        android:id="@+id/etTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:textColor="@color/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/etTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:inputType="time"
        android:textColor="@color/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="@string/label_title"
        android:textColor="@color/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/label_time"
        android:textColor="@color/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTitle" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/label_days"
        android:textColor="@color/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTime" />

    <ToggleButton
        android:id="@+id/tbMon"
        android:layout_width="50dp"
        android:layout_height="58dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/button_monday"
        android:textColor="@color/text"
        android:textOff="@string/button_monday"
        android:textOn="@string/button_monday"
        app:layout_constraintEnd_toStartOf="@+id/tbTue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ToggleButton
        android:id="@+id/tbTue"
        android:layout_width="50dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:text="@string/button_tuesday"
        android:textColor="@color/text"
        android:textOff="@string/button_tuesday"
        android:textOn="@string/button_tuesday"
        app:layout_constraintEnd_toStartOf="@+id/tbWed"
        app:layout_constraintStart_toEndOf="@+id/tbMon"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ToggleButton
        android:id="@+id/tbWed"
        android:layout_width="50dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:text="@string/button_wednesday"
        android:textColor="@color/text"
        android:textOff="@string/button_wednesday"
        android:textOn="@string/button_wednesday"
        app:layout_constraintEnd_toStartOf="@+id/tbThu"
        app:layout_constraintStart_toEndOf="@+id/tbTue"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ToggleButton
        android:id="@+id/tbThu"
        android:layout_width="50dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:text="@string/button_thursday"
        android:textColor="@color/text"
        android:textOff="@string/button_thursday"
        android:textOn="@string/button_thursday"
        app:layout_constraintEnd_toStartOf="@+id/tbFri"
        app:layout_constraintStart_toEndOf="@+id/tbWed"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ToggleButton
        android:id="@+id/tbFri"
        android:layout_width="50dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:text="@string/button_friday"
        android:textColor="@color/text"
        android:textOff="@string/button_friday"
        android:textOn="@string/button_friday"
        app:layout_constraintEnd_toStartOf="@+id/tbSat"
        app:layout_constraintStart_toEndOf="@+id/tbThu"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ToggleButton
        android:id="@+id/tbSat"
        android:layout_width="50dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:text="@string/button_saturday"
        android:textColor="@color/text"
        android:textOff="@string/button_saturday"
        android:textOn="@string/button_saturday"
        app:layout_constraintEnd_toStartOf="@+id/tbSun"
        app:layout_constraintStart_toEndOf="@+id/tbFri"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ToggleButton
        android:id="@+id/tbSun"
        android:layout_width="50dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/button_sunday"
        android:textColor="@color/text"
        android:textOff="@string/button_sunday"
        android:textOn="@string/button_sunday"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tbSat"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/cancel_schedule"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="@android:string/cancel"
        android:textColor="@color/text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/save_schedule"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/save_schedule"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/button_text_save"
        android:textColor="@color/text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cancel_schedule" />

